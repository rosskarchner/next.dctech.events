<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signing Out... - DC Tech Events</title>
    <meta name="robots" content="noindex, nofollow">
    <link rel="stylesheet" href="/static/css/main.css">
    <script
        src="https://cdn.jsdelivr.net/npm/amazon-cognito-identity-js@6.3.7/dist/amazon-cognito-identity.min.js"></script>
    <style>
        .logout-container {
            max-width: 400px;
            margin: 100px auto;
            text-align: center;
            padding: var(--spacing-xl);
        }

        .logout-card {
            background: white;
            border: 1px solid var(--color-border);
            border-radius: 8px;
            padding: var(--spacing-xl);
        }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid var(--color-border);
            border-top-color: var(--color-primary);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto var(--spacing-lg);
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .logout-card p {
            color: var(--color-text-light);
            margin: 0;
        }
    </style>
</head>

<body>
    {{> header}}

    <main class="container">
        <div class="logout-container">
            <div class="logout-card">
                <div class="spinner"></div>
                <p>Signing you out...</p>
            </div>
        </div>
    </main>

    {{> footer}}

    <script>
        // Clear client-side Cognito session
        const poolData = {
            UserPoolId: '{{cognitoUserPoolId}}',
            ClientId: '{{cognitoClientId}}'
        };
        const userPool = new AmazonCognitoIdentity.CognitoUserPool(poolData);

        // Sign out the current user (clears localStorage tokens)
        const cognitoUser = userPool.getCurrentUser();
        if (cognitoUser) {
            cognitoUser.signOut();
        }

        // Also clear any auth cookies (belt and suspenders)
        document.cookie = 'idToken=; path=/; expires=Thu, 01 Jan 1970 00:00:00 GMT; secure; samesite=lax';

        // Clear any Cognito keys from localStorage
        Object.keys(localStorage).forEach(key => {
            if (key.startsWith('CognitoIdentityServiceProvider')) {
                localStorage.removeItem(key);
            }
        });

        // Redirect to homepage after a brief delay
        setTimeout(() => {
            window.location.href = '/';
        }, 500);
    </script>
</body>

</html>